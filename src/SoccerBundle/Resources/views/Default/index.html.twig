{% extends 'bootstrap/layout.html.twig' %}

{% block title %}Liste des joueurs{% endblock %}

{% block content %}
        <table>
            {% for player in players %}
                <tr>
                    <td>
                        <img width="50px" src="{{ asset(player.image) }}" />
                      </td>
                        <td>
                            <a href="{{ path('player_detail', {playerId: player.id}) }}">
                                {{ player.firstname }} {{ player.lastname }}
                                    <table>
                                    </table> Note: {{player.rate}}
                            </a>
                        </td>
                </tr>
            {% else %}
                <tr>
                  <td>Aucun Joueurs.</td>
                </tr>
          {% endfor %}
    </table>
{% endblock %}
