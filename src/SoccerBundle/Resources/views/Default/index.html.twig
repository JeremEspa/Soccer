<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <title>Players List</title>
    </head>
    <body>
            <h2>Liste joueurs</h2>
            <table>
                {% for player in players %}

                    <tr>
                        <td>
                            <img width="50px" src="{{ asset(player.image) }}" />
                        </td>
                        <td>
                            <a href="{{ path('player_detail', {playerId: player.id}) }}">
                                {{ player.firstname }} {{ player.lastname }}<table>
                                </table> Note: {{player.rate}}
                            </a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td>Aucun Joueurs.</td>
                    </tr>
                {% endfor %}
            </table>
    </body>
</html>
